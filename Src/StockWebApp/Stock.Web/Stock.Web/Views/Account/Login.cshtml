@model Stock.Web.ViewModels.LoginViewModel

@using(Html.BeginForm("Login","Account",FormMethod.Post,new{@class="form-horizontal"})){
    
    @Html.ValidationSummary()
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">UserName:</label>
      <div class="col-sm-10">
           @Html.TextBoxFor(m=>m.UserName,new{@class="form-control",placeholder="Enter UserName"})
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Password:</label>
      <div class="col-sm-10">          
        @Html.PasswordFor(m=>m.Password,new{@class="form-control", placeholder="Enter Password"})
      </div>
    </div>
    
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>

}